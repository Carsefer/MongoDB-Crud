<form action="/tasks/add" method="POST">

  <div>
    <label for="title">
      Write a tittle:
    </label>
    <input type="text" name="title" id="title" placeholder="Title" />
  </div>
  <div>
    <label for="description">
      A description:
    </label>
    <textarea
      name="description"
      id="description"
      placeholder="Description"
    ></textarea>
  </div>
  <button type="submit">
    Add
  </button>
</form>